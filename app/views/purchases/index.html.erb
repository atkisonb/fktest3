<h1>Listing purchases</h1>

<table>
  <thead>
    <tr>
      <th>Purchase amount</th>
      <th>Purchase datetime</th>
      <th>User</th>
      <th>Fund</th>
      <th>User</th>
      <th>Fund</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.purchase_amount %></td>
        <td><%= purchase.purchase_datetime %></td>
        <td><%= purchase.user_id %></td>
        <td><%= purchase.fund_id %></td>
        <td><%= purchase.user %></td>
        <td><%= purchase.fund %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

