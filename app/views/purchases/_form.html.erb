<%= form_for @purchase, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :purchase_amount, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :purchase_amount, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :purchase_datetime, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :purchase_datetime, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :user_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fund_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :fund_id, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  purchases_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
